<?xml version="1.0" encoding="utf-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="cursoAyiJPA" transaction-type="RESOURCE_LOCAL"> <!--Esto es por la base de datos local. Para servidores va JTA-->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.curso.app.entity.Cliente</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes> <!--Obliga a colocar la clase en este archivo.-->
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/curso_ayi_jpadb?serverTimezone=America/Santiago"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>